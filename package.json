{
  "name": "ocage",
  "version": "0.1.0",
  "description": "Token usage monitor for OpenCode with real-time dashboard",
  "type": "module",
  "scripts": {
    "css": "bunx @tailwindcss/cli -i src/styles.css -o src/styles.built.css",
    "css:watch": "bunx @tailwindcss/cli -i src/styles.css -o src/styles.built.css --watch",
    "dev": "bun run css && bun --watch src/server/index.ts",
    "build": "make build",
    "start": "bun src/server/index.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
